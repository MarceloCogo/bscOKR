// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())

  // Relations
  users             User[]
  roles             Role[]
  orgNodeTypes      OrgNodeType[]
  perspectives      Perspective[]
  pillars           Pillar[]
  objectiveStatuses ObjectiveStatus[]
  cycleStatuses     CycleStatus[]
  krStatuses        KRStatus[]
  krMetricTypes     KRMetricType[]
  responsibilityRoles ResponsibilityRole[]
  scoreRules        ScoreRule[]

  @@map("tenants")
}

model User {
  id           String   @id @default(cuid())
  tenantId     String
  name         String
  email        String
  passwordHash String
  createdAt    DateTime @default(now())

  // Relations
  tenant     Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  userRoles  UserRole[]

  @@unique([tenantId, email])
  @@map("users")
}

model Role {
  id             String   @id @default(cuid())
  tenantId       String
  key            String
  name           String
  permissionsJson String   @db.Text
  createdAt      DateTime @default(now())

  // Relations
  tenant    Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  userRoles UserRole[]

  @@unique([tenantId, key])
  @@map("roles")
}

model UserRole {
  id     String @id @default(cuid())
  userId String
  roleId String

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@map("user_roles")
}

model OrgNodeType {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("org_node_types")
}

model Perspective {
  id       String @id @default(cuid())
  tenantId String
  name     String
  order    Int

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("perspectives")
}

model Pillar {
  id       String @id @default(cuid())
  tenantId String
  name     String
  order    Int

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("pillars")
}

model ObjectiveStatus {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int
  color    String?

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("objective_statuses")
}

model CycleStatus {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("cycle_statuses")
}

model KRStatus {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int
  color    String?

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("kr_statuses")
}

model KRMetricType {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("kr_metric_types")
}

model ResponsibilityRole {
  id        String @id @default(cuid())
  tenantId  String
  key       String
  name      String
  semantics String
  order     Int

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("responsibility_roles")
}

model ScoreRule {
  id         String @id @default(cuid())
  tenantId   String
  scope      String
  formulaKey String
  paramsJson String @db.Text

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, scope])
  @@map("score_rules")
}