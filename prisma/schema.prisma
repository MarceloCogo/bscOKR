// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())

  // Relations
  users             User[]
  roles             Role[]
  orgNodeTypes      OrgNodeType[]
  orgNodes          OrgNode[]
  orgNodeMemberships OrgNodeMembership[]
  userPreferences   UserPreference[]
  perspectives      Perspective[]
  pillars           Pillar[]
  objectiveStatuses ObjectiveStatus[]
  cycleStatuses     CycleStatus[]
  krStatuses        KRStatus[]
  krMetricTypes     KRMetricType[]
  responsibilityRoles ResponsibilityRole[]
  scoreRules        ScoreRule[]

  @@map("tenants")
}

model User {
  id           String   @id @default(cuid())
  tenantId     String
  name         String
  email        String
  passwordHash String
  createdAt    DateTime @default(now())

  // Relations
  tenant               Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  userRoles            UserRole[]
  orgNodesAsLeader     OrgNode[]            @relation("OrgNodeLeader")
  orgNodeMemberships   OrgNodeMembership[]
  userPreference       UserPreference?

  @@unique([tenantId, email])
  @@map("users")
}

model Role {
  id             String   @id @default(cuid())
  tenantId       String
  key            String
  name           String
  permissionsJson String   @db.Text
  createdAt      DateTime @default(now())

  // Relations
  tenant    Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  userRoles UserRole[]

  @@unique([tenantId, key])
  @@map("roles")
}

model UserRole {
  id     String @id @default(cuid())
  userId String
  roleId String

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@map("user_roles")
}

model OrgNodeType {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int

  // Relations
  tenant   Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  orgNodes OrgNode[]

  @@unique([tenantId, key])
  @@map("org_node_types")
}

model Perspective {
  id       String @id @default(cuid())
  tenantId String
  name     String
  order    Int

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("perspectives")
}

model Pillar {
  id       String @id @default(cuid())
  tenantId String
  name     String
  order    Int

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("pillars")
}

model ObjectiveStatus {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int
  color    String?

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("objective_statuses")
}

model CycleStatus {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("cycle_statuses")
}

model KRStatus {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int
  color    String?

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("kr_statuses")
}

model KRMetricType {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("kr_metric_types")
}

model ResponsibilityRole {
  id        String @id @default(cuid())
  tenantId  String
  key       String
  name      String
  semantics String
  order     Int

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("responsibility_roles")
}

model ScoreRule {
  id         String @id @default(cuid())
  tenantId   String
  scope      String
  formulaKey String
  paramsJson String @db.Text

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, scope])
  @@map("score_rules")
}

model OrgNode {
  id           String @id @default(cuid())
  tenantId     String
  name         String
  typeId       String
  parentId     String?
  leaderUserId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  tenant     Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  type       OrgNodeType @relation(fields: [typeId], references: [id], onDelete: Cascade)
  parent     OrgNode?   @relation("OrgNodeHierarchy", fields: [parentId], references: [id])
  children   OrgNode[]  @relation("OrgNodeHierarchy")
  leader     User?      @relation("OrgNodeLeader", fields: [leaderUserId], references: [id])
  memberships OrgNodeMembership[]

  @@map("org_nodes")
}

model OrgNodeMembership {
  id        String @id @default(cuid())
  tenantId  String
  orgNodeId String
  userId    String
  isPrimary Boolean @default(false)
  createdAt DateTime @default(now())

  // Relations
  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  orgNode OrgNode @relation(fields: [orgNodeId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([orgNodeId, userId])
  @@index([tenantId])
  @@map("org_node_memberships")
}

model UserPreference {
  id              String @id @default(cuid())
  tenantId        String
  userId          String
  activeOrgNodeId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  tenant  Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
  @@unique([userId])
  @@map("user_preferences")
}