// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())

  // Relations
  users             User[]
  roles             Role[]
  orgNodeTypes      OrgNodeType[]
  orgNodes          OrgNode[]
  orgNodeMemberships OrgNodeMembership[]
  userPreferences   UserPreference[]
  perspectives      Perspective[]
  pillars           Pillar[]
  objectiveStatuses ObjectiveStatus[]
  cycleStatuses     CycleStatus[]
  krStatuses        KRStatus[]
  krMetricTypes     KRMetricType[]
  responsibilityRoles ResponsibilityRole[]
  scoreRules        ScoreRule[]
  objectiveLinkTypes ObjectiveLinkType[]
  strategicObjectives StrategicObjective[]
  objectiveResponsibilities ObjectiveResponsibility[]
  objectiveLinks    ObjectiveLink[]
  strategyMapMeta   StrategyMapMeta[]

  @@map("tenants")
}

model User {
  id           String   @id @default(cuid())
  tenantId     String
  name         String
  email        String
  passwordHash String
  createdAt    DateTime @default(now())

  // Relations
  tenant               Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  userRoles            UserRole[]
  orgNodesAsLeader     OrgNode[]            @relation("OrgNodeLeader")
  orgNodeMemberships   OrgNodeMembership[]
  userPreference       UserPreference?
  sponsoredObjectives  StrategicObjective[] @relation("ObjectiveSponsor")

  @@unique([tenantId, email])
  @@map("users")
}

model Role {
  id             String   @id @default(cuid())
  tenantId       String
  key            String
  name           String
  permissionsJson String   @db.Text
  createdAt      DateTime @default(now())

  // Relations
  tenant    Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  userRoles UserRole[]

  @@unique([tenantId, key])
  @@map("roles")
}

model UserRole {
  id     String @id @default(cuid())
  userId String
  roleId String

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@map("user_roles")
}

model OrgNodeType {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int

  // Relations
  tenant   Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  orgNodes OrgNode[]

  @@unique([tenantId, key])
  @@map("org_node_types")
}

model Perspective {
  id       String @id @default(cuid())
  tenantId String
  name     String
  order    Int

  // Relations
  tenant              Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  strategicObjectives StrategicObjective[]

  @@map("perspectives")
}

model Pillar {
  id       String @id @default(cuid())
  tenantId String
  name     String
  order    Int

  // Relations
  tenant              Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  strategicObjectives StrategicObjective[]

  @@map("pillars")
}

model ObjectiveStatus {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int
  color    String?

  // Relations
  tenant              Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  strategicObjectives StrategicObjective[]

  @@unique([tenantId, key])
  @@map("objective_statuses")
}

model CycleStatus {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("cycle_statuses")
}

model KRStatus {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int
  color    String?

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("kr_statuses")
}

model KRMetricType {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("kr_metric_types")
}

model ResponsibilityRole {
  id        String @id @default(cuid())
  tenantId  String
  key       String
  name      String
  semantics String
  order     Int

  // Relations
  tenant               Tenant                 @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  objectiveResponsibilities ObjectiveResponsibility[]

  @@unique([tenantId, key])
  @@map("responsibility_roles")
}

model ScoreRule {
  id         String @id @default(cuid())
  tenantId   String
  scope      String
  formulaKey String
  paramsJson String @db.Text

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, scope])
  @@map("score_rules")
}

model ObjectiveLinkType {
  id       String @id @default(cuid())
  tenantId String
  key      String
  name     String
  order    Int

  // Relations
  tenant        Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  objectiveLinks ObjectiveLink[]

  @@unique([tenantId, key])
  @@map("objective_link_types")
}

model StrategicObjective {
  id               String @id @default(cuid())
  tenantId         String
  title            String
  description      String?
  perspectiveId    String
  pillarId         String?
  statusId         String
  weight           Int    @default(100)
  sponsorUserId    String
  orgNodeId        String
  parentObjectiveId String?
  mapRegion        String
  orderIndex       Int    @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  tenant       Tenant                @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  perspective  Perspective           @relation(fields: [perspectiveId], references: [id], onDelete: Cascade)
  pillar       Pillar?               @relation(fields: [pillarId], references: [id])
  status       ObjectiveStatus       @relation(fields: [statusId], references: [id], onDelete: Cascade)
  sponsor      User                  @relation("ObjectiveSponsor", fields: [sponsorUserId], references: [id], onDelete: Cascade)
  orgNode      OrgNode               @relation(fields: [orgNodeId], references: [id], onDelete: Cascade)
  parent       StrategicObjective?   @relation("ObjectiveHierarchy", fields: [parentObjectiveId], references: [id])
  children     StrategicObjective[]  @relation("ObjectiveHierarchy")
  responsibilities ObjectiveResponsibility[]
  linksFrom    ObjectiveLink[]       @relation("ObjectiveLinkFrom")
  linksTo      ObjectiveLink[]       @relation("ObjectiveLinkTo")

  @@index([tenantId])
  @@map("strategic_objectives")
}

model ObjectiveResponsibility {
  id                String @id @default(cuid())
  tenantId          String
  objectiveId       String
  entityType        String // "user" or "orgnode"
  entityId          String
  responsibilityRoleId String
  contributionWeight Int

  // Relations
  tenant            Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  objective         StrategicObjective  @relation(fields: [objectiveId], references: [id], onDelete: Cascade)
  responsibilityRole ResponsibilityRole @relation(fields: [responsibilityRoleId], references: [id], onDelete: Cascade)

  @@unique([objectiveId, entityType, entityId, responsibilityRoleId])
  @@map("objective_responsibilities")
}

model ObjectiveLink {
  id            String @id @default(cuid())
  tenantId      String
  fromObjectiveId String
  toObjectiveId String
  linkTypeId    String

  // Relations
  tenant       Tenant             @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  fromObjective StrategicObjective @relation("ObjectiveLinkFrom", fields: [fromObjectiveId], references: [id], onDelete: Cascade)
  toObjective   StrategicObjective @relation("ObjectiveLinkTo", fields: [toObjectiveId], references: [id], onDelete: Cascade)
  linkType     ObjectiveLinkType  @relation(fields: [linkTypeId], references: [id], onDelete: Cascade)

  @@unique([fromObjectiveId, toObjectiveId, linkTypeId])
  @@map("objective_links")
}

model OrgNode {
  id           String @id @default(cuid())
  tenantId     String
  name         String
  typeId       String
  parentId     String?
  leaderUserId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  tenant   Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  type       OrgNodeType @relation(fields: [typeId], references: [id], onDelete: Cascade)
  parent     OrgNode?   @relation("OrgNodeHierarchy", fields: [parentId], references: [id])
  children   OrgNode[]  @relation("OrgNodeHierarchy")
  leader     User?      @relation("OrgNodeLeader", fields: [leaderUserId], references: [id])
  memberships OrgNodeMembership[]
  strategicObjectives StrategicObjective[]
  strategyMapMeta StrategyMapMeta[]

  @@map("org_nodes")
}

model OrgNodeMembership {
  id        String @id @default(cuid())
  tenantId  String
  orgNodeId String
  userId    String
  isPrimary Boolean @default(false)
  createdAt DateTime @default(now())

  // Relations
  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  orgNode OrgNode @relation(fields: [orgNodeId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([orgNodeId, userId])
  @@index([tenantId])
  @@map("org_node_memberships")
}

model UserPreference {
  id              String @id @default(cuid())
  tenantId        String
  userId          String
  activeOrgNodeId String?
  viewedHints     String[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  tenant  Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
  @@unique([userId])
  @@map("user_preferences")
}

model StrategyMapMeta {
  id                     String @id @default(cuid())
  tenantId               String
  orgNodeId              String
  ambitionText           String?
  valuePropositionText   String?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  // Relations
  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  orgNode OrgNode @relation(fields: [orgNodeId], references: [id], onDelete: Cascade)

  @@unique([tenantId, orgNodeId])
  @@map("strategy_map_meta")
}